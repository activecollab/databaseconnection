{
    "name": "activecollab/databaseconnection",
    "type": "library",
    "description": "A couple of simple helper methods wrapped around MySQLi connection",
    "license": "MIT",
    "keywords": [
        "mysql",
        "activecollab"
    ],
    "homepage": "https://labs.activecollab.com",
    "authors": [
        {
            "name": "Ilija Studen",
            "email": "ilija.studen@activecollab.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqli": "*",
        "activecollab/containeraccess": "^2.0",
        "activecollab/datevalue": "^2.0",
        "psr/log": "^1.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpunit/phpunit": "~9.0",
        "pimple/pimple": "~3.5.0"
    },
    "replace": {
        "symfony/polyfill-php54": "*",
        "symfony/polyfill-php55": "*",
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-util": "*"
    },
    "autoload": {
        "psr-4": {
            "ActiveCollab\\DatabaseConnection\\": "src",
            "ActiveCollab\\DatabaseConnection\\Test\\": "test/src"
        }
    }
}
